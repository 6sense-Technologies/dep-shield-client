{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "rangeStrategy": "replace",
    "baseBranches": [
      "test"
    ],
    "packageRules": [
      {
        "matchDepTypes": [
          "dependencies",
          "devDependencies"
        ],
        "automerge": true,
        "updateTypes": [
          "minor",
          "patch"
        ]
      }
    ],
    "schedule": [
      "at any time"
    ]
  }